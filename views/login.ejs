<% include ./partials/header %>

<div class="container">
  <h1 style="text-align: center;">Login to your account</h1>

  <div style="width: 400px; margin: 25px auto;">
    <form action="/login" method="POST">

        <div>
            <input class="mb-3 pl-2" type="text"  placeholder="Your username" name="username" style="width: 100%; height: 35px; border-radius:5px; border: 1px solid grey;">
        </div>

        <div>
          <input class="mb-3 pl-2" type="number" placeholder="Your password" name="password" min="0.01" step="0.01" style="width: 100%; height: 35px; border-radius:5px; border: 1px solid grey;">
        </div>

        <div>
            <button class="btn btn-lg btn-primary btn-block">Submit</button>
        </div>

    </form> 

    <a href="/campgrounds">Go Back</a>
    
  </div>

</div>


<% include ./partials/footer%>