<% include ../partials/header%>

<div class="container">
    <h1 style="text-align: center;">Add a comment to <%=campground.name%></h1>

    <div style="width: 400px; margin: 25px auto;">
        <form action="/campgrounds/<%=campground._id%>/comments" method="POST">

          <div>
              <textarea class="mb-3 pl-2" type="text" name="comment[text]" style="width: 100%; height: 100px; border-radius:5px; border: 1px solid grey;">
               
              </textarea>
          </div>

              <button class="btn btn-lg btn-primary btn-block">Submit</button>
          </div>

      </form> 

      <a href="/campgrounds">Go Back</a>
      
    </div>

</div>
 
<% include ../partials/footer%>

