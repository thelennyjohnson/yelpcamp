<% include ../partials/header%>

<h1>Edit Form</h1>


<div class="container">
  <h1 style="text-align: center;">Edit <%= campground.name %></h1>

  <div style="width: 400px; margin: 25px auto;">
      <form action="/campgrounds/<%= campground._id %>/?_method=PUT" method="POST">

        <div>
            <input class="mb-3 pl-2" type="text" placeholder="campground name" name="campground[name]" value="<%= campground.name %>" style="width: 100%; height: 35px; border-radius:5px; border: 1px solid grey;">
        </div>

        <div>
          <input class="mb-3 pl-2" type="number" value="<%= campground.price %>" name="campground[price]" min="0.01" step="0.01" style="width: 100%; height: 35px; border-radius:5px; border: 1px solid grey;">
        </div>

        <div>
            <input class="mb-3 pl-2"  type="text" placeholder="image url" name="campground[image]" value="<%= campground.image%>" style="width: 100%; height: 35px; border-radius:5px; border: 1px solid grey;">
        </div>

        <div>
          <input class="mb-3 pl-2"  type="text" placeholder="Add a description" name="campground[description]" value="<%= campground.description %>" style="width: 100%; height: 35px; border-radius:5px; border: 1px solid grey;">
      </div>

        <div>
            <button class="btn btn-lg btn-primary btn-block">Submit</button>
        </div>

    </form> 

    <a href="/campgrounds/<%= campground._id %>">Go Back</a>
    
  </div>

</div>

<% include ../partials/footer%>

