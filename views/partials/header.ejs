<html lang="en">
  <head>
    <title>Camprounds</title>
    <link
      rel="stylesheet"
      href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css"
      integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T"
      crossorigin="anonymous"
    />
    <link rel="stylesheet" href="/stylesheets/main.css" />
  </head>

  <body>
    <nav class="navbar navbar-light bg-light navbar-expand-md mb-4">
      <a class="navbar-brand" href="/">YelpCamp</a>
      <div class="collapse navbar-collapse">
        <ul class="nav navbar-nav ml-auto">
          <% if(!currentUser){ %>
            <li class="nav-item"><a href="/login" class="nav-link">Log In</a></li>
            <li class="nav-item"><a href="/register" class="nav-link">Sign Up</a></li>  
        <%  } else{ %>
            <li class="nav-item"><a href="#" class="nav-link">Signed in as <%= currentUser.username %></a></li>
            <li class="nav-item"><a href="/logout" class="nav-link">Log Out</a></li>
          <% } %>
          </ul>
      </div>
    </nav>
 
    <div class="container">
     <% if(error && error.length > 0){ %>
        <div class="alert alert-danger" role="alert">
            <%=error%>
        </div>
        <%  }  %>

        <%  if(success && success.length > 0){ %>
          <div class="alert alert-success" role="alert">
              <%=success%>
          </div>
          <%  }   %>
  </div>
